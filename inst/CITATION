citHeader("To cite package 'ggprism' in publications use:")

year <- format(Sys.Date(), "%Y")
ver <- paste("R package version", getNamespaceVersion("ggprism"))

citEntry(
  entry    = "Manual",
  title    = "ggprism: A 'ggplot2' Extension Inspired by 'GraphPad Prism'",
  author   = as.person("Charlotte Dawson"),
  year     = year,
  note     = ver,
  url      = "https://csdaw.github.io/ggprism/",
  textVersion = paste0(
    "Charlotte Dawson (", year, "). ",
    "ggprism: A 'ggplot2' Extension inspired by 'GraphPad Prism'. ",
    ver, ". ",
    "https://cran.r-project.org/package=ggprism"
  )
)
